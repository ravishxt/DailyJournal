<ul class="divide-y divide-gray-200 dark:divide-gray-700">
  <% entriesToShow.forEach((entry) => {%> <% if (entry.title.length === 0) {%>
    <section class="bg-gray-50 dark:bg-gray-950">
      <div class="py-8 px-4 mx-auto max-w-screen-xl lg:py-16 lg:px-6">
          <div class="mx-auto max-w-screen-sm text-center">
              <!-- <h1 class="mb-4 text-7xl tracking-tight font-extrabold lg:text-9xl text-primary-600 dark:text-primary-500">404</h1> -->
              <p class="mb-4 text-3xl tracking-tight font-bold text-gray-400 md:text-4xl dark:text-white">No entries available :(</p>
              <p class="mb-4 text-lg font-light text-gray-500 dark:text-gray-400">You haven't started writing in your diary. </p>
              <a href="/write" class="inline-flex text-white bg-primary-500 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-md text-sm px-5 py-2.5 text-center hover:bg-primary-700 dark:hover:bg-primary-400 focus:ring-primary-600 focus:outline-none focus:ring-2 focus:ring-offset-2 dark:ring-offset-black my-4
               py-2 px-4">Start writing!</a>
          </div>   
      </div>
  </section>

  <%} else { %>
  <li class="py-12">
    <entry>
      <div
        class="space-y-2 xl:grid xl:grid-cols-4 xl:items-baseline xl:space-y-0"
      >
        <dl>
          <dt class="sr-only">Writen on</dt>
          <dd
            class="text-base font-medium leading-6 text-gray-500 dark:text-gray-400"
          >
            <time datetime="2023-08-05T00:00:00.000Z"><%= entry.date %></time>
          </dd>
        </dl>
        <div class="space-y-5 xl:col-span-3">
          <div class="space-y-6">
            <div>
              <h2 class="text-2xl font-bold leading-8 tracking-tight">
                <a
                  class="text-gray-900 dark:text-gray-100"
                  href="/blog/release-of-tailwind-nextjs-starter-blog-v2.0"
                  ><%= entry.title %></a
                >
              </h2>
              <div class="flex flex-wrap mt-2">
                <form action="/edit" method="post">
                  <input type="hidden" name="itemToBeEdited" value=<%=entry.id %> >
                  <button type="submit">
                    <svg class="mr-3 w-5 h-5 text-primary-500 hover:text-primary-600 dark:hover:text-primary-400" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 21 21">
                      <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7.418 17.861 1 20l2.139-6.418m4.279 4.279 10.7-10.7a3.027 3.027 0 0 0-2.14-5.165c-.802 0-1.571.319-2.139.886l-10.7 10.7m4.279 4.279-4.279-4.279m2.139 2.14 7.844-7.844m-1.426-2.853 4.279 4.279"/>
                    </svg>
                  </button>
              </form>
                <form action="/delete" method="post">
                  <input type="hidden" name="itemToBeDeleted" value=<%=entry.id %> >
                  <button type="submit">
                    <svg class="mr-3 w-5 h-5 text-primary-500 hover:text-primary-600 dark:hover:text-primary-400" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 18 20">
                      <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h16M7 8v8m4-8v8M7 1h4a1 1 0 0 1 1 1v3H6V2a1 1 0 0 1 1-1ZM3 5h12v13a1 1 0 0 1-1 1H4a1 1 0 0 1-1-1V5Z"/>
                    </svg>
                  </button>
              </form>
             
              </div>
            </div>
            <div class="prose max-w-none text-gray-500 dark:text-gray-400">
              <% if (entry.body.length > 100) {%> <%=
              entry.body.substring(0, 100) + "..." %> <%} else {%> <%=
              entry.body %> <%}%>
            </div>
          </div>
          <div class="text-base font-medium leading-6">
            <a
              class="text-primary-500 hover:text-primary-600 dark:hover:text-primary-400"
              aria-label='Read more: "Release of Tailwind Nextjs Starter Blog v2.0"'
              href="/entries/<%=entry.title%>"
              >Read more →</a
            >
          </div>
        </div>
      </div>
    </entry>
  </li>
  <%}%> <%})%>
  <% if (entriesToShow[0].title.length) {%>
    <div class="flex justify-end text-base font-medium leading-6 pt-4">
      <a
        class="text-primary-500 hover:text-primary-600 dark:hover:text-primary-400"
        aria-label="All posts"
        href="/entries"
        >All Entries →</a
      >
    </div>
    <%}%>
</ul>
